<div class="card">
    <div class="card-header">
      <h3 class="card-title">
        <a href="/pic/add" class="btn btn-primary"><i class="nav-icon far fa-plus-square"></i></a>
      </h3>
    </div>

    <div class="card-body">
      <table id="example2" class="table table-bordered table-hover">
        <thead>
        <tr>
          <th>No.</th>
          <th>Full Name</th>
          <th>Phone Number</th>
          <th>Job Title</th>
          <th>Action</th>
        </tr>
        </thead>
        <tbody>
        <% for( let i=0; i < pic.length; i++) { %>
            <tr>
              <td><%= i+1 %></td>
              <td><%= pic[i].fullName %></td>
              <td>0<%= pic[i].phoneNumber %></td>
              <td><%= pic[i].jobTitle %></td>
              <td>
                <form action="/pic/delete/<%= pic[i]._id %>?_method=DELETE" method="post">
                    <a href="/pic/edit/<%= pic[i]._id %>" class="btn btn-info btn-sm"> <i class="fas fa-pencil-alt"></i></a>
                    <button class="btn btn-danger btn-sm"> <i class="fas fa-trash"></i></button>
                </form>
              </td>
            </tr>
        <% } %>
        </tbody>
      </table>
    </div>

</div>