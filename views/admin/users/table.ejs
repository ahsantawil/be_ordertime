<div class="card">
    <div class="card-header">
      <h3 class="card-title">
        <a href="/users/add" class="btn btn-primary"><i class="nav-icon far fa-plus-square"></i></a>
      </h3>
    </div>

    <div class="card-body">
      <table id="example2" class="table table-bordered table-hover">
        <thead>
        <tr>
          <th>No.</th>
          <th>Username</th>
          <th>Full Name</th>
          <th>Address</th>
          <th>Action</th>
        </tr>
        </thead>
        <tbody>
        <% for( let i=0; i < user.length; i++) { %>
            <tr>
              <td><%= i+1 %></td>
              <td><%= user[i].username %></td>
              <td><%= user[i].fullName %></td>
              <td><%= user[i].address %></td>
              <td>
                <form action="/users/delete/<%= user[i]._id %>?_method=DELETE" method="post">
                    <a href="/users/edit/<%= user[i]._id %>" class="btn btn-info btn-sm"> <i class="fas fa-pencil-alt"></i></a>
                    <button class="btn btn-danger btn-sm"> <i class="fas fa-trash"></i></button>
                </form>
              </td>
            </tr>
        <% } %>
        </tbody>
      </table>
    </div>

</div>