<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>
  
<div class="content-wrapper">
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Data Region</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/region">Region</a></li>
              <li class="breadcrumb-item active">Home</li>
            </ol>
          </div>
        </div>
      </div>
    </div>
  
    <div class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-12">

            <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Edit Regional</h3>
                </div>
            
                <form action="/region/edit/<%= region._id %>?_method=PUT" method="post">
                  <div class="card-body">
                    <div class="form-group">
                      <label for="city">City</label>
                      <input type="text" name="city" value="<%= region.city %>" class="form-control" id="city" placeholder="Enter City" required>
                    </div>
                    <div class="form-group">
                      <label for="city">Province</label>
                      <select class="form-control" aria-label="Default select example" name="province">
                        <option selected>choose province</option>
                        <% province.forEach(province=>{ %>
                            <option value="<%= province._id %>"
                                <% region.province.forEach(regionProvince => { %>
                                    <% if(province._id.toString() === regionProvince._id.toString()) { %>
                                        selected
                                    <% } %>
                               <% }) %>
                            ><%= province.nameProvince %> 
                            </option>
                        <% }) %>
                      </select>
                    </div>
                  </div>
            
                  <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                  </div>
                </form>
            </div>
            
          </div>
          
        </div>
      
      </div>
     
    </div>

</div>
  
<%- include ../../partials/footer.ejs %>
<%- include ../../partials/js.ejs %>